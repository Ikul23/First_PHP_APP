{% extends "layout.twig" %}

{% block content %}
<div class="container">
    <h1>Пользователь сохранен</h1>
    <div class="user-details">
        <p>ID: {{ user.id }}</p>
        <p>Имя: {{ user.name }}</p>
        <p>Email: {{ user.email }}</p>
        <p>Возраст: {{ user.age }}</p>
        <p>Дата создания: {{ user.created_at }}</p>
    </div>
    <a href="/" class="btn">Вернуться на главную</a>
</div>
{% endblock %}
